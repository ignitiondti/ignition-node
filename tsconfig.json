{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"]
}
